<Page x:Class="CookBook.RecipeManager.GUI.Pages.SearchRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookBook.RecipeManager.GUI.Pages"
      xmlns:models="clr-namespace:CookBook.RecipeManager.GUI.Models"
      mc:Ignorable="d" 
      Title="SearchRecipePage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Area -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" 
             Width="300"
             DockPanel.Dock="Left"
             Style="{StaticResource BaseTextBoxStyle}"
             Margin="0,0,10,0"/>

            <Button x:Name="btnSearch" 
            Style="{StaticResource BaseButtonStyle}"
            DockPanel.Dock="Left"
            Content="Search"
            Width="80"
            Click="BtnSearch_Click"/>
        </DockPanel>

        <!-- Results Display Area -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recipe List -->
            <Border Grid.Column="0" 
                    BorderThickness="1" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    CornerRadius="4" 
                    Margin="0,0,10,0"
                    Background="White">
                <ListBox x:Name="lstResults" 
                        BorderThickness="0"
                        Background="Transparent"
                        SelectionChanged="LstResults_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                     Padding="8,4" 
                                     TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Recipe Details Panel -->
            <ScrollViewer Grid.Column="1">
                <Border x:Name="recipeDetailPanel"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        CornerRadius="4"
                        Background="White"
                        Visibility="Collapsed">
                    <DockPanel Margin="20">
                        <!-- Title -->
						<DockPanel DockPanel.Dock="Top" Margin="0,0,0,20">
							<models:FavoriteButton x:Name="favoriteButton"
												  DockPanel.Dock="Right"
												  Margin="10,0,0,0"
												  VerticalAlignment="Center"
												  FavoriteChanged="FavoriteButton_FavoriteChanged"/>
							<TextBlock x:Name="recipeTitle"
									  FontSize="28"
									  FontWeight="Bold"
									  Foreground="{StaticResource TextPrimaryBrush}"/>
						</DockPanel>
